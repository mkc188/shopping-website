<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <form id="login-form">
      <div class="form-group">
        <label for="username">Username: </label>
        <input name="username" type="email" class="form-control" id="login-username-input" placeholder="Username" required>
      </div>
      <div class="form-group">
        <label for="password">Password: </label>
        <input name="password" type="password" class="form-control" id="login-password-input" placeholder="Password" pattern=".{6,20}" required>
      </div>
      <button type="submit" id="login-btn" class="btn btn-default">Login</button>
    </form>
  </div>
  <div class="col-sm-4 col-sm-offset-2">
    <form id="signup-form">
      <div class="form-group">
        <label for="username">Username: </label>
        <input name="username" type="email" class="form-control" id="signup-username-input" placeholder="Username" required>
      </div>
      <div class="form-group">
        <label for="password">Password: </label>
        <input name="password" type="password" class="form-control" id="signup-password-input" placeholder="Password" pattern=".{6,20}" required>
      </div>
      <div class="form-group">
        <label for="passwordConfirm">Confirm Password: </label>
        <input name="passwordConfirm" type="password" class="form-control" id="signup-password-confirm-input" placeholder="Confirm Password" pattern=".{6,20}" required>
      </div>
      <button type="submit" id="signup-btn" class="btn btn-default">Signup</button>
    </form>
  </div>
</div>
<div class="row">
  <br />
  <div class="col-sm-6 col-sm-offset-3">
    <div id="header-alert" class="alert alert-success navbar-button"></div>
  </div>
</div>
