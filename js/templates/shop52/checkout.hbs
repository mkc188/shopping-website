<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h3>Checkout page</h3>

    <table id="shopping-cart" class="table table-responsive">
      {{#collection tag="tbody" id="shopping-list"}}
        <tr>
          <td><span data-id={{{yavu id}}} class="remove-item glyphicon glyphicon-remove"></span> {{{yd name}}}</td>
          <td colspan=2>
            <input data-id={{{yavu id}}} type="text" value={{{yavu quantity}}} class="qty input-sm" name="change-quantity">
            <td>$ {{{yd subtotal}}}</td>
        </tr>
      {{/collection}}
      <tfoot>
        <tr>
          <td>Total: $ <span id="total">0.00</span></td>
        </tr>
      </tfoot>
    </table>
    <hr>
    {{#button "paypalCheckout" tag="img" src="paypal.png" class="btn"}}{{/button}}
    <img id="loading" src="loading.gif" width="48" height="48">
  </div>
</div>
