<form id="changepw-form">
  <div class="form-group">
    <label for="password">Password: </label>
    <input name="password" type="password" class="form-control" id="changepw-password-input" placeholder="Password" pattern=".{6,20}" required>
  </div>
  <div class="form-group">
    <label for="passwordConfirm">Confirm Password: </label>
    <input name="passwordConfirm" type="password" class="form-control" id="changepw-password-confirm-input" placeholder="Confirm Password" pattern=".{6,20}" required>
  </div>
  <button type="submit" id="changepw-btn" class="btn btn-default">Change Password</button>
</form>
